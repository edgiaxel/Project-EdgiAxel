<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="280.0" prefWidth="420.0" style="-fx-background-color: #2a2a2a; -fx-border-color: #e50f0f; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.edgiaxel.controller.ManufacturerEditDialogController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="ADD / EDIT MANUFACTURER" textFill="#e50f0f">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        
        <GridPane layoutX="15.0" layoutY="60.0" prefHeight="140.0" prefWidth="390.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="60.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="270.0" minWidth="10.0" prefWidth="270.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Manufacturer ID:" textFill="WHITE" />
                <Label text="Name:" GridPane.rowIndex="1" textFill="WHITE" />
                <Label text="Country:" GridPane.rowIndex="2" textFill="WHITE" />
                <Label text="Category:" GridPane.rowIndex="3" textFill="WHITE" />
                
                <TextField fx:id="idField" disable="true" editable="false" promptText="Generated by DB" GridPane.columnIndex="1" style="-fx-background-color: #3b3b3b; -fx-text-fill: #a0a0a0;" />
                <TextField fx:id="nameField" promptText="e.g., Lamborghini" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" />
                <TextField fx:id="countryField" promptText="e.g., Italy" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" />
                <ComboBox fx:id="categoryComboBox" prefWidth="270.0" promptText="Hypercar or LMGT3" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" />
            </children>
        </GridPane>
        
        <HBox spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleOk" text="SAVE" style="-fx-background-color: #3b82f6; -fx-text-fill: WHITE; -fx-font-weight: bold;" />
                <Button mnemonicParsing="false" onAction="#handleCancel" text="CANCEL" style="-fx-background-color: #6a6a6a; -fx-text-fill: WHITE;" />
            </children>
        </HBox>
    </children>
</AnchorPane>