<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.edgiaxel.controller.ViewChampionshipsController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="🏆 CHAMPIONSHIP STANDINGS" textFill="#e50f0f">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="50.0" text="Select Season:" />
      <ComboBox fx:id="yearComboBox" layoutX="110.0" layoutY="46.0" prefWidth="150.0" promptText="Select Year" onAction="#handleYearSelection"/>
      <TabPane fx:id="championshipTabPane" layoutX="14.0" layoutY="90.0" prefHeight="480.0" prefWidth="872.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="90.0">
         <tabs>
            <Tab text="Overall Driver Standings (Hypercar)">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <TableView fx:id="driverHyperTable" prefHeight="450.0" prefWidth="872.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        </TableView>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Manufacturer Standings (Hypercar)">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <TableView fx:id="manufacturerHyperTable" prefHeight="450.0" prefWidth="872.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        </TableView>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="LMGT3 Team Standings">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <TableView fx:id="teamGT3Table" prefHeight="450.0" prefWidth="872.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        </TableView>
                  </AnchorPane>
               </content>
            </Tab>
         </tabs>
      </TabPane>
      <HBox layoutX="14.0" layoutY="590.0" spacing="10.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0">
          <Button mnemonicParsing="false" onAction="#handleViewRaceResults" text="View Race Results for Selected Circuit" />
          <Button mnemonicParsing="false" onAction="#handleBackToDashboard" text="&lt; Back" />
      </HBox>
   </children>
</AnchorPane>