<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="450.0" style="-fx-border-color: #e50f0f;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.edgiaxel.controller.TeamEditDialogController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="⚙️ ADD/EDIT TEAM ENTRY" textFill="#e50f0f">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <GridPane layoutX="14.0" layoutY="50.0" prefHeight="230.0" prefWidth="420.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="50.0">
            <columnConstraints>
                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Manufacturer:" />
                <Label text="Car Model:" GridPane.rowIndex="1" />
                <Label text="Car Number (ID):" GridPane.rowIndex="2" />
                <Label text="Team Name:" GridPane.rowIndex="3" />
                <Label text="Nationality:" GridPane.rowIndex="4" />
                <Label text="Category (Auto):" GridPane.rowIndex="5" />
                <TextField fx:id="carNumberField" promptText="e.g., 50 or 8" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="teamNameField" promptText="e.g., Porsche Penske Motorsport" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="nationalityField" promptText="e.g., Germany" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <ComboBox fx:id="manufacturerComboBox" disable="true" prefWidth="300.0" GridPane.columnIndex="1" />
                <ComboBox fx:id="carModelComboBox" prefWidth="300.0" promptText="Select Model or Create New" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="categoryField" disable="true" editable="false" promptText="Hypercar/LMGT3" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </children>
        </GridPane>
        <HBox layoutX="278.0" layoutY="300.0" spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleOk" text="OK" />
                <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</AnchorPane>