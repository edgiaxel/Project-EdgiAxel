<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="450.0" style="-fx-background-color: #2a2a2a; -fx-border-color: #e50f0f; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.edgiaxel.controller.TeamEditDialogController">
    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="ADD/EDIT TEAM ENTRY" textFill="#e50f0f">
            <font><Font name="System Bold" size="20.0" /></font>
        </Label>
        <GridPane layoutX="14.0" layoutY="60.0" prefHeight="230.0" prefWidth="420.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="60.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Manufacturer:" textFill="WHITE" />
                <Label text="Car Model:" GridPane.rowIndex="1" textFill="WHITE" />
                <Label text="Car Number (ID):" GridPane.rowIndex="2" textFill="WHITE" />
                <Label text="Team Name:" GridPane.rowIndex="3" textFill="WHITE" />
                <Label text="Nationality:" GridPane.rowIndex="4" textFill="WHITE" />
                <Label text="Category (Auto):" GridPane.rowIndex="5" textFill="WHITE" />
                
                <ComboBox fx:id="manufacturerComboBox" disable="true" prefWidth="300.0" GridPane.columnIndex="1" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" />
                <ComboBox fx:id="carModelComboBox" prefWidth="300.0" promptText="Select Model or Create New" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" />
                <TextField fx:id="carNumberField" promptText="e.g., 50 or 8" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" />
                <TextField fx:id="teamNameField" promptText="e.g., Porsche Penske Motorsport" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" />
                <TextField fx:id="nationalityField" promptText="e.g., Germany" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" />
                <TextField fx:id="categoryField" disable="true" editable="false" promptText="Hypercar/LMGT3" GridPane.columnIndex="1" GridPane.rowIndex="5" style="-fx-background-color: #3b3b3b; -fx-text-fill: #a0a0a0;" />
            </children>
        </GridPane>
        <HBox spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleOk" text="SAVE TEAM" style="-fx-background-color: #3b82f6; -fx-text-fill: WHITE; -fx-font-weight: bold;" />
                <Button mnemonicParsing="false" onAction="#handleCancel" text="CANCEL" style="-fx-background-color: #6a6a6a; -fx-text-fill: WHITE;" />
            </children>
        </HBox>
    </children>
</AnchorPane>