<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="220.0" prefWidth="350.0" style="-fx-background-color: #2a2a2a; -fx-border-color: #6a6a6a; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.edgiaxel.controller.DriverSimpleEditDialogController">
    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="ADD NEW DRIVER" textFill="#a0a0a0">
            <font><Font name="System Bold" size="18.0" /></font>
        </Label>
        <GridPane layoutX="15.0" layoutY="50.0" prefHeight="100.0" prefWidth="320.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="50.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="220.0" minWidth="10.0" prefWidth="220.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="First Name:" textFill="WHITE" />
                <Label text="Last Name:" GridPane.rowIndex="1" textFill="WHITE" />
                <Label text="Nationality:" GridPane.rowIndex="2" textFill="WHITE" />
                <TextField fx:id="firstNameField" promptText="e.g., Valentino" GridPane.columnIndex="1" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" />
                <TextField fx:id="lastNameField" promptText="e.g., Rossi" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" />
                <TextField fx:id="nationalityField" promptText="e.g., Italy" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" />
            </children>
        </GridPane>
        <HBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleOk" text="OK" style="-fx-background-color: #3b82f6; -fx-text-fill: WHITE; -fx-font-weight: bold;" />
                <Button mnemonicParsing="false" onAction="#handleCancel" text="CANCEL" style="-fx-background-color: #6a6a6a; -fx-text-fill: WHITE;" />
            </children>
        </HBox>
    </children>
</AnchorPane>