<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="350.0" style="-fx-border-color: #6a6a6a;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.edgiaxel.controller.DriverSimpleEditDialogController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="âž• ADD NEW DRIVER" textFill="#6a6a6a">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <GridPane layoutX="15.0" layoutY="50.0" prefHeight="100.0" prefWidth="320.0">
            <columnConstraints>
                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" maxWidth="220.0" minWidth="10.0" prefWidth="220.0" />
            </columnConstraints>
            <rowConstraints>
                <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="First Name:" />
                <Label text="Last Name:" GridPane.rowIndex="1" />
                <Label text="Nationality:" GridPane.rowIndex="2" />
                <TextField fx:id="firstNameField" promptText="e.g., Valentino" GridPane.columnIndex="1" />
                <TextField fx:id="lastNameField" promptText="e.g., Rossi" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="nationalityField" promptText="e.g., Italy" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>
        <HBox layoutX="190.0" layoutY="160.0" spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleOk" text="OK" />
                <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</AnchorPane>