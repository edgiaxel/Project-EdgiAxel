<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: #1c1c1c;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.edgiaxel.controller.DriverAssignmentDialogController">
    <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="DRIVER MANAGEMENT AND ASSIGNMENT" textFill="#e50f0f">
            <font><Font name="System Bold" size="22.0" /></font>
        </Label>
        
        <VBox layoutX="15.0" layoutY="60.0" prefHeight="700.0" prefWidth="970.0" spacing="15.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="60.0">
            <children>
                <Label fx:id="teamLabel" text="Selected Team: #XX [Team Name] - [CATEGORY]" textFill="WHITE">
                    <font><Font name="System Bold" size="16.0" /></font>
                    </Label>
                
                <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
                    <VBox HBox.hgrow="ALWAYS" prefWidth="400.0" spacing="8.0" style="-fx-border-color: #6a6a6a; -fx-border-width: 1; -fx-padding: 10;">
                        <Label text="AVAILABLE DRIVERS (GLOBAL POOL):" textFill="#a0a0a0" />
                        <ListView fx:id="availableDriverList" VBox.vgrow="ALWAYS" style="-fx-background-color: #3b3b3b; -fx-control-inner-background: #1c1c1c; -fx-font-size: 14pt; -fx-text-fill: white;" />
                        <Button mnemonicParsing="false" onAction="#handleNewDriver" prefWidth="400.0" text="+ ADD NEW DRIVER GLOBALLY" style="-fx-background-color: #404040; -fx-text-fill: WHITE;" />
                    </VBox>
                    
                    <VBox alignment="CENTER" prefWidth="50.0" spacing="20.0">
                        <Button mnemonicParsing="false" onAction="#handleAssignDriver" text="IN" style="-fx-background-color: #3b82f6; -fx-text-fill: WHITE; -fx-font-weight: bold;" />
                        <Button mnemonicParsing="false" onAction="#handleRemoveDriver" text="OUT" style="-fx-background-color: #e50f0f; -fx-text-fill: WHITE; -fx-font-weight: bold;" />
                    </VBox>
                    
                    <VBox HBox.hgrow="ALWAYS" prefWidth="400.0" spacing="8.0" style="-fx-border-color: #e50f0f; -fx-border-width: 1; -fx-padding: 10;">
                        <Label text="CURRENT TEAM DRIVERS (MIN 3 / MAX 4):" textFill="WHITE" />
                        <ListView fx:id="teamDriverList" VBox.vgrow="ALWAYS" style="-fx-background-color: #3b3b3b; -fx-control-inner-background: #1c1c1c; -fx-font-size: 14pt; -fx-text-fill: white;" />
                        <Label fx:id="driverCountLabel" text="Total: 0/3 (Min/Max)" textFill="WHITE" />
                    </VBox>
                </HBox>
            </children>
        </VBox>
        
        <HBox spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleSave" text="SAVE ASSIGNMENTS" style="-fx-background-color: #3b82f6; -fx-text-fill: WHITE; -fx-font-weight: bold; -fx-padding: 8 15;" />
                <Button mnemonicParsing="false" onAction="#handleCancel" text="DISCARD CHANGES" style="-fx-background-color: #6a6a6a; -fx-text-fill: WHITE; -fx-padding: 8 15;" />
            </children>
        </HBox>
    </children>
</AnchorPane>