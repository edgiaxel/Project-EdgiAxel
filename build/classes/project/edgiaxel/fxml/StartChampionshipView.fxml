<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="850.0" prefWidth="1200.0" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.edgiaxel.controller.StartChampionshipViewController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="START NEW WEC CHAMPIONSHIP" textFill="#e50f0f">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        
        <VBox layoutX="14.0" layoutY="60.0" prefHeight="720.0" prefWidth="1172.0" spacing="15.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="60.0">
           <children>
               <HBox alignment="CENTER_LEFT" prefHeight="30.0" spacing="20.0" style="-fx-padding: 5; -fx-background-color: #2a2a2a; -fx-border-color: #3b3b3b;">
                  <children>
                      <Label text="CHAMPIONSHIP YEAR:" textFill="WHITE">
                          <font>
                              <Font name="System Bold" size="14.0" />
                          </font>
                      </Label>
                      <ComboBox fx:id="yearComboBox" editable="false" prefWidth="120.0" promptText="e.g., 2025" style="-fx-text-fill: WHITE;" />
                      <Button mnemonicParsing="false" onAction="#handleCheckYear" style="-fx-background-color: #3b82f6; -fx-text-fill: WHITE; -fx-font-weight: bold;" text="VALIDATE YEAR" />
                      <Separator orientation="VERTICAL" />
                      <Label fx:id="statusLabel" text="STATUS: READY FOR START" textFill="#00b386">
                          <font>
                              <Font name="System Bold" size="14.0" />
                          </font>
                      </Label>
                  </children>
               </HBox>
               
               <TitledPane animated="false" collapsible="false" style="" text="[STEP 1] WEC CIRCUIT CALENDAR SELECTION (Min 1 Circuit)">
                   <content>
                       <AnchorPane style="-fx-background-color: #2a2a2a;">
                          <children>
                              <TableView fx:id="circuitTable" prefHeight="200.0" style="-fx-background-color: #3b3b3b; -fx-control-inner-background: #1c1c1c;" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                          </children>
                       </AnchorPane>
                   </content>
               </TitledPane>
               
               <TitledPane animated="false" collapsible="false" prefHeight="400.0" style="" text="[STEP 2] TEAM ENTRY SELECTION (FILTERING)">
                   <content>
                       <GridPane hgap="15.0" style="-fx-padding: 10; -fx-background-color: #2a2a2a;" vgap="10.0">
                           <columnConstraints>
                               <ColumnConstraints hgrow="SOMETIMES" prefWidth="50.0" />
                               <ColumnConstraints hgrow="SOMETIMES" prefWidth="50.0" />
                           </columnConstraints>
                           <rowConstraints>
                               <RowConstraints vgrow="SOMETIMES" />
                               <RowConstraints vgrow="NEVER" />
                           </rowConstraints>
                          <children>
                              
                              <VBox spacing="5.0">
                                 <children>
                                     <Label text="MANUFACTURERS (SELECT TO INCLUDE):" textFill="WHITE">
                                         <font>
                                             <Font name="System Bold" size="12.0" />
                                         </font>
                                     </Label>
                                     <TableView fx:id="manufacturerTable" prefHeight="300.0" style="-fx-background-color: #3b3b3b; -fx-control-inner-background: #1c1c1c;" />
                                     <Label text="Deselecting a Manufacturer removes all its Teams." textFill="#a0a0a0" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="5.0" GridPane.columnIndex="1">
                                 <children>
                                     <Label text="TEAM ENTRIES (FILTERED LIST):" textFill="WHITE">
                                         <font>
                                             <Font name="System Bold" size="12.0" />
                                         </font>
                                     </Label>
                                     <TableView fx:id="teamTable" prefHeight="300.0" style="-fx-background-color: #3b3b3b; -fx-control-inner-background: #1c1c1c;" />
                                     <HBox alignment="CENTER_LEFT" spacing="15.0">
                                        <children>
                                            <CheckBox fx:id="autoSelectDrivers" selected="true" text="Auto-include assigned drivers for selected teams" textFill="WHITE" />
                                            <Label text="Teams must have 3-4 drivers assigned in Master Data." textFill="#e50f0f" />
                                        </children>
                                     </HBox>
                                 </children>
                              </VBox>
                          </children>
                       </GridPane>
                   </content>
               </TitledPane>
           </children>
        </VBox>
        
        <HBox alignment="CENTER_RIGHT" layoutX="700.0" layoutY="795.0" spacing="20.0" AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="14.0">
           <children>
               <Button mnemonicParsing="false" onAction="#handleBackToDashboard" prefHeight="36.0" prefWidth="78.0" style="-fx-background-color: #404040; -fx-text-fill: white;" text="CANCEL" />
               <Button fx:id="startChampionshipButton" mnemonicParsing="false" onAction="#handleStartChampionship" style="-fx-background-color: #e50f0f; -fx-font-weight: bold; -fx-padding: 10 20;" text="START NEW CHAMPIONSHIP" textFill="WHITE" />
           </children>
        </HBox>
    </children>
</AnchorPane>
