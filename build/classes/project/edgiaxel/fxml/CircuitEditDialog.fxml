<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="450.0" style="-fx-background-color: #2a2a2a; -fx-border-color: #e50f0f; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.edgiaxel.controller.CircuitEditDialogController">
    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="ADD / EDIT CIRCUIT DATA" textFill="#e50f0f">
            <font><Font name="System Bold" size="20.0" /></font>
        </Label>
        <GridPane layoutX="15.0" layoutY="60.0" prefHeight="230.0" prefWidth="420.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="60.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Circuit ID:" textFill="WHITE" />
                <Label text="Name:" textFill="WHITE" GridPane.rowIndex="1" />
                <Label text="Location/City:" textFill="WHITE" GridPane.rowIndex="2" />
                <Label text="Country:" textFill="WHITE" GridPane.rowIndex="3" />
                <Label text="Length (km):" textFill="WHITE" GridPane.rowIndex="4" />
                <Label text="Race Duration:" textFill="WHITE" GridPane.rowIndex="5" />
                
                <TextField fx:id="idField" disable="true" editable="false" promptText="Generated by DB" style="-fx-background-color: #3b3b3b; -fx-text-fill: #a0a0a0;" GridPane.columnIndex="1" />
                <TextField fx:id="nameField" promptText="e.g., Circuit de la Sarthe" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="locationField" promptText="e.g., Le Mans" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="countryField" promptText="e.g., France" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="lengthField" promptText="e.g., 13.629" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <ComboBox fx:id="raceTypeComboBox" prefWidth="300.0" promptText="Select Race Duration" style="-fx-background-color: #3b3b3b; -fx-text-fill: WHITE;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </children>
        </GridPane>
          <Button layoutX="304.0" layoutY="314.0" mnemonicParsing="false" onAction="#handleOk" style="-fx-background-color: #3b82f6; -fx-text-fill: WHITE; -fx-font-weight: bold;" text="SAVE" />
          <Button layoutX="363.0" layoutY="314.0" mnemonicParsing="false" onAction="#handleCancel" style="-fx-background-color: #6a6a6a; -fx-text-fill: WHITE;" text="CANCEL" />
    </children>
</AnchorPane>
